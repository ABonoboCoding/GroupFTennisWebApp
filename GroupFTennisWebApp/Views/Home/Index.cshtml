@using Microsoft.AspNetCore.Identity
@using GroupFTennisWebApp.Areas.Identity.Data
@inject UserManager<GroupFTennisWebAppUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}

@if (User.IsInRole("Member"))
{
    <h2>Hello member @UserManager.GetUserAsync(User).Result.LastName</h2>
    <p>View all coaches, and enrol into a schedule of your choice.</p>
    <a class="btn btn-primary" asp-area="" asp-controller="Coaches" asp-action="ListCoaches">View all Coaches here</a>

    <p>After you have found the coach you like, enrol into a schedule to meetup with them.</p>
    <a class="btn btn-primary" asp-area="" asp-controller="Schedules" asp-action="Index">Enrol into a schedule here </a>

    <p>After you enrolled in a schedule of your choice, you can check your enrollment detail on My Enrollment page</p>
    <a class="btn btn-primary" asp-area="" asp-controller="ScheduleMembers" asp-action="Myenrollment">View my enrollment </a>
}
@if (User.IsInRole("Coach"))
{
    <h2>Hello coach @UserManager.GetUserAsync(User).Result.LastName</h2>
    <p>View your profile, to attract potential members to schedule a session with you</p>
    <a class="btn btn-primary" asp-area="" asp-controller="Coaches" asp-action="CoachProfile">View my profile here</a>

    <p>View your upcoming schedules that members have enrolled with you</p>
    <a class="btn btn-primary" asp-area="" asp-controller="Coaches" asp-action="MySchedule">My Upcoming Schedules</a>
}
@if (User.IsInRole("Admin"))
{
    <div class="text-center">
        <h1 class="display-4">Welcome @UserManager.GetUserAsync(User).Result.LastName</h1>
    </div>

}
