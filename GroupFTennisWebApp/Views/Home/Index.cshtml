@using Microsoft.AspNetCore.Identity
@using GroupFTennisWebApp.Areas.Identity.Data
@inject UserManager<GroupFTennisWebAppUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}

@if (User.IsInRole("Member"))
{
    <h2>Hello member @UserManager.GetUserName(User)</h2>
    <p>View all coaches, and enrol into a schedule of your choice.</p>
    <a class="btn btn-primary" asp-area="" asp-controller="Coaches" asp-action="Index">View all Coaches here</a>

    <p>After you have found the coach you like, enrol into a schedule to meetup with them.</p>
    <a class="btn btn-primary" asp-area="" asp-controller="Schedules" asp-action="Index">Enrol into a schedule here </a>
}
@if (User.IsInRole("Coach"))
{
    <h2>Hello coach @UserManager.GetUserName(User)</h2>
    <p>View and edit your profile, to attract potential members to schedule a sessoion with you</p>
    <a class="btn btn-primary" asp-area="" asp-controller="Coaches" asp-action="MyCoach">View and Edit my profile here</a>

    <p>View your upcoming schedules that members have enrolled with you</p>
    <a class="btn btn-primary" asp-area="" asp-controller="Coaches" asp-action="MySchedule">My Upcoming Schedules</a>
}
@if (User.IsInRole("Admin"))
{
    <div class="text-center">
        <h1 class="display-4">Welcome Admin  @UserManager.GetUserName(User)</h1>
    </div>

}
